<main class="form-signin w-100 m-auto">
  <%= form_for @user, url: register_url do |f| %>
    <h1 class="h3 mb-3 fw-bold text-center">LOGO</h1>
    <h1 class="h3 mb-3 fw-normal">Please sign in</h1>
    <div class="form-floating">
      <%= f.text_field :name, class: "form-control", placeholder: "Name" %>
      <%= f.label :name, 'Full Name' %>
    </div>
    <div class="form-floating">
      <%= f.text_field :address, class: "form-control", placeholder: "Address" %>
      <%= f.label :address, 'Address' %>
    </div>
    <div class="form-floating">
      <%= f.email_field :email, class: "form-control", placeholder: "name@example.com" %>
      <%= f.label :email, 'Email address' %>
    </div>
    <div class="form-floating">
      <%= f.password_field :password, class: "form-control", placeholder: "Password" %>
      <%= f.label :password, 'Password' %>
    </div>
    <div class="form-floating">
        <h6 class="mb-3">Role</h6>
        <div class="form-check">
            <%= f.radio_button :role, 'patient', checked: 'checked', class: 'form-check-input' %>
            <%= f.label :role, :value => 'patient' %>
        </div>
        <div class="form-check">
            <%= f.radio_button :role, 'doctor',  class: 'form-check-input' %>
            <%= f.label :role, :value => 'doctor' %>
        </div>
    </div>
    <div class="form-check text-start my-3 px-0">
      <%= render partial: '/shared/link', locals: {href: login_url, title: 'Sign in', css: "link-underline-primary "} %>
    </div>
    <button class="btn btn-primary w-100 py-2" type="submit">Sign up</button>
    <p class="mt-5 mb-3 text-body-secondary">© 2017–2024</p>
  <% end %>
</main>