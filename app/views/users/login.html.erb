<main class="form-signin w-100 m-auto">
  <%= form_for :user, url: login_url, html: { data: { action: "submit->login#login", target: "login.form" }} do |f| %>

  
    <h1 class="h3 mb-3 fw-bold text-center">LOGO</h1>
    <h1 class="h3 mb-3 fw-normal">Please sign in</h1>
    <div class="form-floating">
      <%= f.text_field :email, class: "form-control", id: "email", placeholder: "name@example.com" %>
      <label for="email">Email address</label>
    </div>
    <div class="form-floating">
      <%= f.password_field :password, class: "form-control", id: "password", placeholder: "Password" %>
      <label for="password">Password</label>
    </div>
    <div class="form-check text-start my-3 px-0">
      <%= render partial: '/shared/link', locals: {href: register_url, title: 'Sign up', css: "link-underline-primary "} %>
    </div>
    <button class="btn btn-primary w-100 py-2" type="submit">Sign in</button>
    <p class="mt-5 mb-3 text-body-secondary">© 2017–2024</p>
  <% end %>
</main>